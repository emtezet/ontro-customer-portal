 <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
		
	<head>
            <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
            <meta name="content-language" content="pl"/>
            <title>{% block title %}Grafik 3.0{% endblock %}</title>
            
            {% block stylesheets %}
                <link href="{{ asset('css/global.css') }}" rel="stylesheet" />
                <link href="{{ asset('css/login_page.css') }}" rel="stylesheet" />
            {% endblock %}
 

            {% block javascripts %}{% endblock %}
	</head>
	
	<body>
            <div class="wrapper">
                <div id="top_stripe" class="login_page_stripe"></div>
                
               {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="flash-{{ type }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
                <div style="width:100%;margin-top:10%;float:left">
                    <table style="color:black;margin:0 auto;text-aligh:center">
                        <tr>
                            <td><img src="{{ asset('images/login_logo.png') }}" /></td>
                            <td><img src="{{ asset('images/login_dash.png') }}" /></td>s
                            <td>
                                {% block fos_user_content %}{% endblock fos_user_content %}
                            </td>
                        </tr>
                    </table>
                    
                </div>
                
            </div>
            <div class="footer">
                Copyright by Intercam Studios. All Rights Reserved.
            </div>	
	</body> 

</html>

